<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.common.mappers.UniversalMapper">
    <insert id="insert" parameterType="java.lang.Object" useGeneratedKeys="true" keyProperty="id">
        ${@build.dream.common.utils.DatabaseUtils@generateInsertSql(_parameter.getClass())}
    </insert>

    <insert id="insertAll" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        <bind name="sql" value="@build.dream.common.utils.DatabaseUtils@generateInsertAllSql(list)"></bind>
        ${sql[0]}
        <foreach collection="list" index="index" item="item" separator=",">
            ${sql[1]}
        </foreach>
    </insert>

    <delete id="delete" parameterType="build.dream.common.utils.DeleteModel">
        DELETE FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.deleteSearchConditionSql"></include>
    </delete>

    <update id="update" parameterType="java.lang.Object">
        ${@build.dream.common.utils.DatabaseUtils@generateUpdateSql(_parameter.getClass())}
    </update>

    <update id="universalUpdate" parameterType="build.dream.common.utils.UpdateModel">
        UPDATE ${tableName} SET
        <foreach collection="contentValues" index="index" item="contentValue" separator=",">
            ${contentValue.columnName} = #{contentValue.value}
        </foreach>
        <include refid="build.dream.common.mappers.CommonMapper.universalUpdateSearchConditionSql"></include>
    </update>

    <update id="executeUpdate" parameterType="java.util.Map">
        ${sql}
    </update>

    <select id="find" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap">
        <bind name="searchConditions" value="searchModel.searchConditions"></bind>
        <bind name="whereClause" value="searchModel.whereClause"></bind>
        <bind name="namedParameters" value="searchModel.namedParameters"></bind>
        <bind name="groupBy" value="searchModel.groupBy"></bind>
        <bind name="orderBy" value="searchModel.orderBy"></bind>
        <bind name="forUpdate" value="searchModel.forUpdate"></bind>
        SELECT ${columns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.findSearchConditionSql"></include>
    </select>

    <select id="findAll" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap">
        <bind name="searchConditions" value="searchModel.searchConditions"></bind>
        <bind name="whereClause" value="searchModel.whereClause"></bind>
        <bind name="namedParameters" value="searchModel.namedParameters"></bind>
        <bind name="groupBy" value="searchModel.groupBy"></bind>
        <bind name="orderBy" value="searchModel.orderBy"></bind>
        <bind name="forUpdate" value="searchModel.forUpdate"></bind>
        SELECT ${columns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.findAllSearchConditionSql"></include>
    </select>

    <select id="count" resultType="long">
        <bind name="searchConditions" value="searchModel.searchConditions"></bind>
        <bind name="whereClause" value="searchModel.whereClause"></bind>
        <bind name="namedParameters" value="searchModel.namedParameters"></bind>
        SELECT COUNT(1) FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.countSearchConditionSql"></include>
    </select>

    <select id="universalCount" parameterType="java.util.Map" resultType="long">
        ${sql}
    </select>

    <select id="pagedCount" resultType="long">
        <bind name="searchConditions" value="pagedSearchModel.searchConditions"></bind>
        <bind name="whereClause" value="pagedSearchModel.whereClause"></bind>
        <bind name="namedParameters" value="pagedSearchModel.namedParameters"></bind>
        SELECT COUNT(1) FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.pagedCountSearchConditionSql"></include>
    </select>

    <select id="findAllPaged" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap" databaseId="MYSQL">
        <bind name="searchConditions" value="pagedSearchModel.searchConditions"></bind>
        <bind name="whereClause" value="pagedSearchModel.whereClause"></bind>
        <bind name="namedParameters" value="pagedSearchModel.namedParameters"></bind>
        <bind name="groupBy" value="pagedSearchModel.groupBy"></bind>
        <bind name="orderBy" value="pagedSearchModel.orderBy"></bind>
        <choose>
            <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(databaseProvider, 'MYSQL')">
                <bind name="offset" value="pagedSearchModel.offset"></bind>
                <bind name="maxResults" value="pagedSearchModel.maxResults"></bind>
                SELECT ${columns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.mysqlPagedSearchConditionSql"></include> LIMIT #{offset}, #{maxResults}
            </when>
            <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(databaseProvider, 'MYCAT')">
                <bind name="offset" value="pagedSearchModel.offset"></bind>
                <bind name="maxResults" value="pagedSearchModel.maxResults"></bind>
                SELECT ${columns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.mycatPagedSearchConditionSql"></include> LIMIT #{offset}, #{maxResults}
            </when>
            <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(databaseProvider, 'ORACLE')">
                <bind name="startRowNumber" value="pagedSearchModel.startRowNumber"></bind>
                <bind name="endRowNumber" value="pagedSearchModel.endRowNumber"></bind>
                SELECT ${columns} FROM (SELECT ROWNUM AS rowno, ${selectColumns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.oraclePagedSearchConditionSql"></include>) AS t WHERE t.rowno &gt; #{startRowNumber}
            </when>
            <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(databaseProvider, 'SQLSERVER')">
                <bind name="offset" value="pagedSearchModel.offset"></bind>
                <bind name="maxResults" value="pagedSearchModel.maxResults"></bind>
                SELECT ${columns} FROM ${tableName} <include refid="build.dream.common.mappers.CommonMapper.sqlServerPagedSearchConditionSql"></include> OFFSET #{offset} ROWS FETCH NEXT #{maxResults} ROWS ONLY
            </when>
        </choose>
    </select>

    <select id="executeQuery" parameterType="java.util.Map" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap">
        ${sql}
    </select>

    <select id="executeUniqueResultQuery" parameterType="java.util.Map" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap">
        ${sql}
    </select>
</mapper>